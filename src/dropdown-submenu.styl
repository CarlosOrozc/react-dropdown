.dropdown-submenu {
    position: relative;

    &:hover,
    &.open {
        > .dropdown-menu {
            display: block;
        }
    }

    &.pull-left {
        float: none;

        > .dropdown-menu {
            left: auto;
            right: 100%;
            margin-left: 0;
        }
    }

    > .menu-item:before {
        display: block;
        content: " ";
        float: right;
        width: 0;
        height: 0;
        border: 4px solid transparent;
        border-right-width: 0;
        border-left-color: #666;
        margin: 6px -16px 6px 0;
    }

    > .dropdown-menu {
        top: 0;
        left: 100%;
        margin-top: 0;
    }
}
